{
	"rootDir": "./",
	"stagingDir": "dist",
	"autoImportComponentScript": true,
	"sourceMap": true,
	"createPackage": false,
	"emitDefinitions": true,
	"files": [
		"components/**/*",
		"source/**/*",
		"assets/**/*",
		"manifest",
		{
			"src": "../src/source/**/*",
			"dest": "source"
		},
		{
			"src": "../src/components/**/*",
			"dest": "components"
		},
		//exclude the test files
		"!../src/**/*.spec.bs"
	],
	"plugins": [
		"bsc-plugin-inline-annotation"
	]
}
